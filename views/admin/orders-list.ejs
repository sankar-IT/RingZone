  margin-top: 20px;
  gap: 6px;
  margin-left: auto;
  margin-right: auto;
}

.pagination-container a,
.pagination-container .current-page {
  display: inline-block;
  padding: 8px 14px;
  margin: 0 3px;
  border-radius: 6px;
  font-size: 14px;
  font-weight: 500;
  text-decoration: none;
  transition: all 0.3s ease;
  color: #ff4646; 
  border: 1px solid #ff4646;
}

