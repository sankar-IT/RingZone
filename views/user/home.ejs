<%-include('../../views/partials/user/header')%>
<div class="main_slider" style="background-image: url('/images/13.jpg'); background-size: cover; background-position: center; position: relative;">
  <div class="container fill_height" style="position: relative; z-index: 2;">
    <div class="row align-items-center fill_height">
      <div class="col">
       <div class="main_slider_content text-white ms-0 me-4">
  <h6 class="text-dark me-3">Latest Smartphones. Best Prices. Guaranteed.</h6>
  <h1 class="text-dark me-3">Up to 40% Off Top Mobile Brands</h1>
  <div class="red_button shop_now_button"><a href="/shopping-pageList">shop now</a></div>
</div>

        </div>
      </div>
    </div>
  </div>
</div>
<section class="new_arrivals py-5">
  <div class="container">
    <div class="row">
      <div class="col text-center">
        <h2 class="fw-bold mb-4">New Arrivals</h2>
      </div>
    </div>
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-4">
      <% for(let i = 0; i < products.length; i++) { %>
        <div class="col">
          <div class="product-card p-3 border rounded text-center h-100 position-relative">
            <a href="/products/<%= products[i]._id %>">
              <img src="/<%= products[i].images[0] %>" alt="<%= products[i].productName %>" class="img-fluid mb-2" style="height: 200px; object-fit: cover;">
              <h6><%= products[i].productName?.length > 10 ? products[i].productName.slice(0,15) + '...' : products[i].productName %></h6>
              <p class="text-muted small mb-1"><%= products[i].brand.name %></p>
              <div class="d-flex justify-content-center align-items-center gap-2">
                <span class="text-danger fw-bold">₹<%= products[i].variants[0].discountPrice.toLocaleString('en-IN') %></span>
                <span class="text-muted text-decoration-line-through">₹<%= products[i].variants[0].regularPrice.toLocaleString('en-IN') %></span>
              </div>
            </a>
          <a href="/products/<%= products[i]._id %>" class="btn btn-sm mt-2 w-100 text-white" style="background-color: #ff4646;">
  Add to Cart
</a>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</section>
    </div>
  </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
 
  document.addEventListener("DOMContentLoaded", () => {
    const updateAccountMenu = (elementId) => {
      const username = localStorage.getItem("username");
      const accountMenu = document.getElementById(elementId);

      if (username) {
        const firstLetter = username.charAt(0).toUpperCase();
        accountMenu.innerHTML = `
          <a href="#">
            ${firstLetter}
            <i class="fa fa-angle-down"></i>
          </a>
          <ul class="${elementId === 'accountMenu' ? 'account_selection' : 'menu_selection'}">
            <li><a href="/profile"><i class="fa fa-user"></i> Profile</a></li>
            <li><a href="#" onclick="logout()"><i class="fa fa-sign-out"></i> Logout</a></li>
          </ul>
        `;
      } else {
        accountMenu.innerHTML = `
          <a href="#">
            My Account
            <i class="fa fa-angle-down"></i>
          </a>
          <ul class="${elementId === 'accountMenu' ? 'account_selection' : 'menu_selection'}">
            <li><a href="/login"><i class="fa fa-sign-in"></i> Sign In</a></li>
            <li><a href="/register"><i class="fa fa-user-plus"></i> Register</a></li>
          </ul>
        `;
      }
    };

    updateAccountMenu('accountMenu');
    updateAccountMenu('mobileAccountMenu');

    // Countdown Timer
    const countDownDate = new Date();
    countDownDate.setDate(countDownDate.getDate() + 3);

    const timer = setInterval(() => {
      const now = new Date().getTime();
      const distance = countDownDate - now;

      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      document.getElementById("day").innerText = days.toString().padStart(2, '0');
      document.getElementById("hour").innerText = hours.toString().padStart(2, '0');
      document.getElementById("minute").innerText = minutes.toString().padStart(2, '0');
      document.getElementById("second").innerText = seconds.toString().padStart(2, '0');

      if (distance < 0) {
        clearInterval(timer);
        document.querySelector(".deal_ofthe_week_content").innerHTML = '<h2>Deal Expired!</h2>';
      }
    }, 1000);
  });

  function logout() {
    localStorage.removeItem("username");
    window.location.href = "/";
  }
</script>

