<%- include('../../views/partials/user/header') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"/>

<style>
  body {
    background-color: #f2f2f2;
    font-family: 'Segoe UI', sans-serif;
    margin-top: 120px;
  }
  .failure-box {
    background-color: #ffffff;
    padding: 40px;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    text-align: center;
  }
  .failure-icon {
    font-size: 60px;
    color: #ff4646;
    margin-bottom: 20px;
  }
  .btn-retry {
    background-color: #ff4646;
    color: #fff;
    border: none;
    margin-top: 20px;
    padding: 12px 25px;
    font-weight: 500;
    border-radius: 6px;
  }
  .btn-retry:hover {
    background-color: #e53e3e;
  }
  @media (max-width: 768px) {
    .failure-box {
      padding: 30px 20px;
    }
  }
</style>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="failure-box">
        <div class="failure-icon">
          <i class="fas fa-times-circle"></i>
        </div>
        <h3 class="mb-3 text-danger">Payment Failed</h3>
        <p class="text-muted mb-3">We're sorry, but your transaction could not be completed.</p>
        <p class="mb-4">Please check your payment details or try again. If you continue to have issues, contact support.</p>
        <a href="/view-orders" class="btn btn-retry">see order</a>
        <br/>
        <a href="/shopping-pageList" class="text-decoration-none mt-3 d-inline-block text-muted">Back to Shop</a>
      </div>
    </div>  
  </div>
</div>

<%- include('../../views/partials/user/footer') %>
