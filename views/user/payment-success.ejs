<%- include('../../views/partials/user/header') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<style>
  body {
    background-color: #f2f2f2;
    font-family: 'Segoe UI', sans-serif;
  }

  .success-box {
    background-color: #ffffff;
    padding: 40px;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    text-align: center;
  }

  .success-icon {
    font-size: 60px;
    color: #28a745;
    margin-bottom: 20px;
  }

  .btn-track {
    background-color: #ff4646;
    color: #fff;
    border: none;
    margin-top: 20px;
    padding: 12px 25px;
    font-weight: 500;
    border-radius: 6px;
  }

  .btn-track:hover {
    background-color: #e53e3e;
  }

  @media (max-width: 768px) {
    .success-box {
      padding: 30px 20px;
    }
  }
</style>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="success-box">
        <div class="success-icon">
          <i class="fas fa-check-circle"></i>
        </div>
        <h3 class="mb-3">Payment Successful!</h3>
        <p class="text-muted mb-3">Thank you for your purchase. Your order has been placed and is now being processed.</p>
        <p class="mb-4">You will receive an email confirmation shortly with your order details.</p>
        <a href="/view-orders" class="btn btn-track">Track Order</a>
        <br/>
        <a href="/shopping-pageList" class="text-decoration-none mt-3 d-inline-block text-muted">Continue Shopping</a>
      </div>
    </div>
  </div>
</div>

<%- include('../../views/partials/user/footer') %>

