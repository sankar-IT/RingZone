<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Forgot Password</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .forget-password-link{
      font-size: 0.875rem;
      color:blue;
      text-decoration: none;
    }
    .forget-password-link:hover{
      color:rgb(70, 70, 213);
      text-decoration: underline;
    }
    .form-group{
      display: flex;
      justify-content: end;
      margin-top: 5px;
    }
  </style>
</head>
<body class="bg-white-50 flex items-center justify-center min-h-screen">

  <div class="bg-white rounded-xl shadow-lg flex w-full max-w-4xl overflow-hidden">
    
   
    <div class="hidden md:flex w-1/2 bg-white-100 items-center justify-center">
      <img src="https://i.pinimg.com/736x/88/10/52/8810521b6114c23be76ca2937daa5f4e.jpg" alt="Phone" class="w-2/3">
    </div>
    
    
    <div class="w-full md:w-1/2 p-10">
      <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Reset your password</h2>
      <p class="text-gray-600 mb-6 text-center">Enter your email address and we'll send you a link to reset your password.</p>
      
      <form action="/forget-email-valid" method="post" class="space-y-4" onsubmit="return validateForgetEmailForm()">
        <input name="email" id="email" type="email" placeholder="Email address" 
               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required />
        
        <button type="submit" class="w-full bg-red-600 text-white py-2 rounded-md hover:bg-red-700 transition">
          verify
        </button>
      </form>

    
      <div class="text-center mt-4">
        <a href="/login" class="text-blue-600 hover:underline text-sm">Back to Login</a>
      </div>

      <% if (locals.message && message.length > 0) { %>
        <div class="bg-red-100 text-red-700 border border-red-400 px-4 py-3 rounded text-center mb-4 mt-4">
          <%= message %>
        </div>
      <% } %>

    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    function validateForgetEmailForm() {
      const email = document.getElementById("email").value.trim();
      const regex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

      if (!regex.test(email)) {
        Swal.fire({
          icon: 'error',
          title: 'Invalid Email',
          text: 'Please enter a valid email address.',
        });
        return false;
      }

      Swal.fire({
        icon: 'success',
        title: 'Email Sent',
        text: 'A password reset link has been sent to your email!',
      });

      return true;
    }
    
  </script>
</body>
</html>