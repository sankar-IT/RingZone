  <style>
    
.card.product-card {
  display: flex;
  flex-direction: column;
  height: 100%;
  z-index: 5;
}

.card.product-card .card-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.card.product-card .btn {
  display: inline-block;
  width: auto;
}


.product-img {
  height: 220px;
  object-fit: contain;
  width: 100%;
  padding: 10px;
  background-color: #f9f9f9;
  border-bottom: 1px solid #eee;
  border-top-left-radius: 0.375rem;
  border-top-right-radius: 0.375rem;
}


.product-card {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  border-radius: 10px;
  overflow: hidden;
  background-color: #fff;
  border: 1px solid #ddd;
  transition: 0.3s ease;
}

.cart-count {
  font-size: 0.7rem;
  padding: 0.15em 0.4em;
}
.product-card:hover {
  box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
  transform: translateY(-3px);
}


.product-card .card-body {
  padding: 1rem;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}


.product-card .card-title {
  font-size: 1rem;
  font-weight: 600;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 0.5rem;
}


.product-card .text-primary {
  font-size: 1rem;
  font-weight: bold;
  margin-bottom: 0.5rem;
  color: #007bff !important;
}


.product-card .btn-outline-primary {
  font-size: 0.875rem;
  padding: 6px 12px;
  border-radius: 4px;
}


.product-card .fa-heart {
  font-size: 1.25rem;
  transition: color 0.2s;
}

.product-card .fa-heart:hover {
  color: #dc3545;
}


.text-truncate {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


.banner_item {
  height: 250px;
  border-radius: 12px;
  background-size: cover;
  background-position: center;
  position: relative;
  overflow: hidden;
  transition: transform 0.4s ease;
  margin-bottom: 20px;
  display: flex;
  align-items: flex-end;
  padding: 20px;
}

.banner_item:hover {
  transform: scale(1.03);
}

.banner_overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(0,0,0,0.6));
  z-index: 1;
}

.banner_category {
  position: absolute;
  bottom: 20px;
  left: 20px;
  z-index: 2;
}

.banner_category a {
  background-color: rgba(255, 255, 255, 0.9);
  padding: 10px 20px;
  border-radius: 6px;
  color: #000;
  font-weight: bold;
  font-size: 1rem;
  text-transform: uppercase;
  text-decoration: none;
  transition: all 0.3s ease;
}

.banner_category a:hover {
  background-color: #ff7f50;
  color: #fff;
}


@media (max-width: 768px) {
  .banner_item {
    height: 180px;
  }

  .banner_category a {
    font-size: 0.9rem;
    padding: 8px 16px;
  }
}

@media (max-width: 480px) {
  .banner_item {
    height: 150px;
  }
}
.navbar_menu a {
  font-size: 20px;           
  font-weight: 700;        
  letter-spacing: 1px;       
  color: #222;             
  text-decoration: none;
  padding: 10px 18px;       
  position: relative;
  transition: color 0.3s ease;
}

.navbar_menu a::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: -5px;
  width: 0;
  height: 3px;
  background-color: #ff7f50; 
  transition: width 0.3s ease;
}

.navbar_menu a:hover {
  color: #ff7f50;
}

.navbar_menu a:hover::after {
  width: 100%; 
}

.sign-in-link {
  font-size: 16px;
  color: #333;
  text-decoration: none;
  font-weight: 600;
}

.sign-in-link:hover {
  color: #ff7f50;
}


.user-avatar {
